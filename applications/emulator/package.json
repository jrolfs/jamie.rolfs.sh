  "license": "MIT",
  "scripts": {
    "build": "run-p 'build:*'",
    "build:source": "",
    "build:types": "tsc",
    "commit": "hover-scripts commit",
    "format": "hover-scripts format",
    "lint": "hover-scripts lint",
    "pre-commit": "hover-scripts pre-commit --test-command 'hover-scripts test --findRelatedTests --passWithNoTests'",
    "start": "run-p start:source start:types",
    "start:source": "docker compose -f ../../docker-compose.yml -f docker-compose.yml up --build emulator",
    "start:develop": "nodemon src/index.ts",
    "start:types": "tsc -b -w --preserveWatchOutput",
    "test": "hover-scripts test --no-watch",
    "test:update": "hover-scripts test --updateSnapshot",
    "test:watch": "hover-scripts test"
  },
  "devDependencies": {
    "@hover/javascript": "7.0.0-beta.10",
    "@preconstruct/hook": "^0.4.0",
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.22",
    "@types/getenv": "^1",
    "@types/node": "^18.11.17",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@jrolfs/core": "^0.0.1",
    "@jrolfs/utilities": "0.15.0",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "fastify": "^4.10.2",
    "fastify-jwt": "^4.2.0",
    "getenv": "^1.0.0",
    "socket.io": "^4.5.4",
    "tiny-invariant": "^1.3.1",
    "xstate": "^4.35.0"
  }
